PROG=`which "\$0"`
DIST=`dirname \$PROG`

if [ "\$DIST" = "." ]
then
  DIST=`pwd`
else
  SAVED="`pwd`"
  cd "\$DIST"
  DIST="`pwd`"
  cd "\$SAVED"
fi

MARATHONHOME=\$DIST

if [ `uname -s` = Darwin ]
then
  java -Xdock:icon="\$MARATHONHOME/applet.icns" -Dcom.apple.mrj.application.growbox.intrudes=false -Dcom.apple.mrj.application.live-resize=true -Dcom.apple.macos.smallTabs=true -Xdock:name=Marathon -Dmarathon.useAppleMenuBar=true -jar "\$MARATHONHOME/$marathonJar" \$*
else
  java -jar "\$MARATHONHOME/$marathonJar" \$*
fi
